{
    "author"      : "Henri Bouvier",
    "name"        : "tomahawk",
    "description" : "Minimal HTTP Server",
    "version"     : "0.0.14",
    "repository"  : {
        "type" : "git",
        "url"  : "https://github.com/hbouvier/tomahawk.git"
    },
    "dependencies"         : {
        "express"      : "3.4.8",
        "connect"      : "2.12.0",
        "socket.io"    : "0.9.16",
        "winston"      : "0.7.2",
        "node-options" : "0.0.3"
    },
    "engines"              : {
        "node" : ">= 0.8.0 < 0.11.0"
    },
    "main" : "./lib/tomahawk.js",
    "bin"  : {
        "tomahawk" : "./bin/tomahawk"
    },
    "scripts": {
        "start": "bin/tomahawk"
    },
    "configuration"        : {
        "name"       : "Tomahawk",
        "level"      : "verbose",
        "www"        : ".",
        "config"     : "config.json",
        "context"    : "/",
        "port"       : 8080,
        "ip"         : "0.0.0.0",
        "routes"     : [],
        "cgi"        : [],
        "headers"    : [],
	    "socket"     : {
            "level"           : "error",
            "transports"      : [
                "websocket",
                "flashsocket",
                "htmlfile",
                "xhr-polling",
                "jsonp-polling"
            ],
            "pollingduration" : 10
        }
    }
}
